{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:schema:read-words.v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["address", "count", "words"],
  "properties": {
    "address": {"type": "string", "pattern": "^0x[0-9a-fA-F]+$"},
    "count": {"type": "integer"},
    "words": {
      "type": "array",
      "items": {
        "oneOf": [
          {"type": "integer"},
          {"type": "null"}
        ]
      }
    },
    "literals": {
      "type": "array",
      "items": {
        "oneOf": [
          {"type": "string"},
          {"type": "null"}
        ]
      }
    }
  }
}
