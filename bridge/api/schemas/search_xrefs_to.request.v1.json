{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "search_xrefs_to.request.v1.json",
  "type": "object",
  "required": ["address", "query"],
  "properties": {
    "address": {
      "type": "string",
      "pattern": "^0x[0-9a-fA-F]+$"
    },
    "query": {
      "type": "string",
      "minLength": 1
    },
    "limit": {
      "type": "integer",
      "minimum": 1,
      "maximum": 1000,
      "default": 100
    },
    "page": {
      "type": "integer",
      "minimum": 1,
      "default": 1
    }
  },
  "additionalProperties": false
}
