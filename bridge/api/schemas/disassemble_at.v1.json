{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:schema:disassemble-at.v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["items"],
  "properties": {
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["address", "bytes", "text"],
        "properties": {
          "address": {"type": "string", "pattern": "^0x[0-9a-fA-F]+$"},
          "bytes": {"type": "string"},
          "text": {"type": "string"}
        }
      }
    }
  }
}
