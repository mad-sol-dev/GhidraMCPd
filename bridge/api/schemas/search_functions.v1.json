{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "search_functions.v1.json",
  "type": "object",
  "required": ["query", "total", "page", "limit", "items", "has_more"],
  "properties": {
    "query": {
      "type": "string"
    },
    "total": {
      "type": ["integer", "null"],
      "minimum": 0
    },
    "page": {
      "type": "integer",
      "minimum": 1
    },
    "limit": {
      "type": "integer",
      "minimum": 1
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "address"],
        "properties": {
          "name": {
            "type": "string"
          },
          "address": {
            "type": "string",
            "pattern": "^0x[0-9a-fA-F]+$"
          },
          "context": {
            "type": "object",
            "required": ["window", "disassembly"],
            "properties": {
              "window": {
                "type": "object",
                "required": ["before", "after", "center"],
                "properties": {
                  "before": {"type": "integer", "minimum": 0},
                  "after": {"type": "integer", "minimum": 0},
                  "center": {
                    "type": "string",
                    "pattern": "^0x[0-9a-fA-F]+$"
                  }
                },
                "additionalProperties": false
              },
              "disassembly": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["address", "bytes", "text"],
                  "properties": {
                    "address": {
                      "type": "string",
                      "pattern": "^0x[0-9a-fA-F]+$"
                    },
                    "bytes": {"type": "string"},
                    "text": {"type": "string"}
                  },
                  "additionalProperties": false
                }
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    },
    "has_more": {"type": "boolean"},
    "resume_cursor": {
      "type": ["string", "null"],
      "minLength": 1
    },
    "cursor": {
      "type": ["string", "null"],
      "minLength": 1
    }
  },
  "additionalProperties": false
}
