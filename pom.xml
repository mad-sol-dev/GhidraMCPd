<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <groupId>com.lauriewired</groupId>
  <artifactId>GhidraMCP</artifactId>
  <packaging>jar</packaging>
  <version>1.3.0</version>
  <name>GhidraMCP</name>
  <url>http://maven.apache.org</url>

  <!-- Java-/Build-Defaults -->
  <properties>
    <!-- Nutze das JDK 17 Toolchain-Level (empfohlen statt source/target) -->
    <maven.compiler.release>17</maven.compiler.release>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <ghidra.version>11.4.2</ghidra.version>
    <ghidra.dir>${project.basedir}/lib</ghidra.dir>
    <ghidra.generic.path>Generic.jar</ghidra.generic.path>
    <ghidra.softwareModeling.path>SoftwareModeling.jar</ghidra.softwareModeling.path>
    <ghidra.project.path>Project.jar</ghidra.project.path>
    <ghidra.docking.path>Docking.jar</ghidra.docking.path>
    <ghidra.decompiler.path>Decompiler.jar</ghidra.decompiler.path>
    <ghidra.utility.path>Utility.jar</ghidra.utility.path>
    <ghidra.base.path>Base.jar</ghidra.base.path>
    <ghidra.gui.path>Gui.jar</ghidra.gui.path>
  </properties>

  <profiles>
    <profile>
      <id>env-ghidra-dir</id>
      <activation>
        <property>
          <name>env.GHIDRA_DIR</name>
        </property>
      </activation>
      <properties>
        <ghidra.dir>${env.GHIDRA_DIR}</ghidra.dir>
        <ghidra.generic.path>Ghidra/Framework/Generic/lib/Generic.jar</ghidra.generic.path>
        <ghidra.softwareModeling.path>Ghidra/Features/SoftwareModeling/lib/SoftwareModeling.jar</ghidra.softwareModeling.path>
        <ghidra.project.path>Ghidra/Framework/Project/lib/Project.jar</ghidra.project.path>
        <ghidra.docking.path>Ghidra/Framework/Docking/lib/Docking.jar</ghidra.docking.path>
        <ghidra.decompiler.path>Ghidra/Features/Decompiler/lib/Decompiler.jar</ghidra.decompiler.path>
        <ghidra.utility.path>Ghidra/Framework/Utility/lib/Utility.jar</ghidra.utility.path>
        <ghidra.base.path>Ghidra/Framework/Base/lib/Base.jar</ghidra.base.path>
        <ghidra.gui.path>Ghidra/Framework/Gui/lib/Gui.jar</ghidra.gui.path>
      </properties>
    </profile>
  </profiles>

  <dependencies>
    <!-- Ghidra JARs als system-scope (lokal in lib/) -->
    <dependency>
      <groupId>ghidra</groupId>
      <artifactId>Generic</artifactId>
      <version>${ghidra.version}</version>
      <scope>system</scope>
      <systemPath>${ghidra.dir}/${ghidra.generic.path}</systemPath>
    </dependency>
    <dependency>
      <groupId>ghidra</groupId>
      <artifactId>SoftwareModeling</artifactId>
      <version>${ghidra.version}</version>
      <scope>system</scope>
      <systemPath>${ghidra.dir}/${ghidra.softwareModeling.path}</systemPath>
    </dependency>
    <dependency>
      <groupId>ghidra</groupId>
      <artifactId>Project</artifactId>
      <version>${ghidra.version}</version>
      <scope>system</scope>
      <systemPath>${ghidra.dir}/${ghidra.project.path}</systemPath>
    </dependency>
    <dependency>
      <groupId>ghidra</groupId>
      <artifactId>Docking</artifactId>
      <version>${ghidra.version}</version>
      <scope>system</scope>
      <systemPath>${ghidra.dir}/${ghidra.docking.path}</systemPath>
    </dependency>
    <dependency>
      <groupId>ghidra</groupId>
      <artifactId>Decompiler</artifactId>
      <version>${ghidra.version}</version>
      <scope>system</scope>
      <systemPath>${ghidra.dir}/${ghidra.decompiler.path}</systemPath>
    </dependency>
    <dependency>
      <groupId>ghidra</groupId>
      <artifactId>Utility</artifactId>
      <version>${ghidra.version}</version>
      <scope>system</scope>
      <systemPath>${ghidra.dir}/${ghidra.utility.path}</systemPath>
    </dependency>
    <dependency>
      <groupId>ghidra</groupId>
      <artifactId>Base</artifactId>
      <version>${ghidra.version}</version>
      <scope>system</scope>
      <systemPath>${ghidra.dir}/${ghidra.base.path}</systemPath>
    </dependency>
    <dependency>
      <groupId>ghidra</groupId>
      <artifactId>Gui</artifactId>
      <version>${ghidra.version}</version>
      <scope>system</scope>
      <systemPath>${ghidra.dir}/${ghidra.gui.path}</systemPath>
    </dependency>

    <!-- Tests -->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.13.2</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
        <!-- Compiler: setze Java 17 über "release" -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.11.0</version>
        <configuration>
          <release>17</release>
        </configuration>
      </plugin>

      <!-- Jar mit eigenem MANIFEST -->
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.2.2</version>
        <configuration>
          <archive>
            <manifestFile>src/main/resources/META-INF/MANIFEST.MF</manifestFile>
          </archive>
          <finalName>GhidraMCP</finalName>
          <excludes>
            <exclude>**/App.class</exclude>
          </excludes>
          <outputDirectory>${project.build.directory}</outputDirectory>
        </configuration>
      </plugin>

      <!-- Assembly: Ghidra-Extension-ZIP bauen -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>3.3.0</version>
        <configuration>
          <descriptors>
            <descriptor>src/assembly/ghidra-extension.xml</descriptor>
          </descriptors>
          <finalName>GhidraMCP-${project.version}</finalName>
          <appendAssemblyId>false</appendAssemblyId>
        </configuration>
        <executions>
          <execution>
            <id>make-assembly</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

      <!-- Dependencies in target/lib für das ZIP spiegeln -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>3.1.2</version>
        <executions>
          <execution>
            <id>copy-dependencies</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/lib</outputDirectory>
              <includeScope>runtime</includeScope>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>

