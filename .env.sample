# Copy this file to .env and adjust values for your environment.
# Lines beginning with # are comments.

# Base URL (including trailing slash) of the Ghidra HTTP plugin.
GHIDRA_SERVER_URL=http://127.0.0.1:8080/

# Enable deterministic endpoints that perform writes (rename/comment). Keep disabled unless auditing is enabled.
GHIDRA_MCP_ENABLE_WRITES=false

# Enable project rebasing endpoints that modify checked-out workspaces. Rebases stay disabled by default.
GHIDRA_MCP_ENABLE_PROJECT_REBASE=false

# Absolute or relative path to the JSONL audit log capturing successful deterministic writes.
# When empty, write operations will not be recorded.
GHIDRA_MCP_AUDIT_LOG=

# Safety limits used by deterministic endpoints.
GHIDRA_MCP_MAX_WRITES_PER_REQUEST=2
GHIDRA_MCP_MAX_ITEMS_PER_BATCH=256

# Optional bridge adapters to enable (comma-separated list like "x86,i386").
# Only adapters listed in the documentation or reported by /optional-adapters are supported.
BRIDGE_OPTIONAL_ADAPTERS=

# Test utilities: set to 1 to overwrite golden snapshots during development.
UPDATE_GOLDEN_SNAPSHOTS=0
